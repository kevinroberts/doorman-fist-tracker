{{!< default}}

{{#contentFor 'pageStyles'}}
    <style>
        .fistBoard {
            font-size: 1.4em;
        }
        .fistBoard .rank {
            width: 80px;
        }
        .fistBoard .totalFists {
            font-size: 1.44em;
        }
        .fistBoard .name span{
            position: relative;
            top: -2rem;
            padding-left: 10px;
        }
        .fistBoard .name img{
            width: 80px;
        }
    </style>
{{/contentFor}}

<div class="container">
    <div class="row">
        <div class="col s12 m12">
            <h2 class="header center-align indigo-text lighten-1 section-title">
                The &#9994;&#127998; Leaderboard
            </h2>


            <table class="highlight fistBoard">
                <thead>
                <tr>
                    <th class="rank" data-field="rank">Rank</th>
                    <th data-field="name">People</th>
                    <th data-field="totalFists">Total Fists</th>
                </tr>
                </thead>

                <tbody>
                {{#each users}}
                {{!-- only output if fist data exists --}}
                    {{#if fists}}
                            <tr class="{{currentUser}}">

                            <td class="rank">
                                {{math @index "+" 1}}
                            </td>
                            <td class="name">
                            {{#if image}}
                                <img src="{{image}}" alt="" class="circle">
                            {{/if}}
                                <span>{{name}}</span>
                                {{#if aka}}
                                    <span>&nbsp; aka {{aka}}</span>
                                {{/if}}

                            </td>
                            <td class="totalFists center-align">{{fists}} &#9994;&#127998;</td>
                        </tr>
                    {{/if}}
                {{/each}}
                </tbody>
            </table>


        </div>
    </div>
</div>